# -*- mode: snippet -*-
# name: clangd
# key: clangd
# --
if(NOT MSVC_IDE)
set(CMAKE_EXPORT_COMPILE_COMMANDS ON)
add_custom_target(
    clangd ALL
    \${CMAKE_COMMAND} -E copy_if_different
    \${CMAKE_BINARY_DIR}/compile_commands.json
    \${CMAKE_SOURCE_DIR}
    )
add_dependencies($0 clangd)
endif()
